<h1>In case you want to go mental...</h1>
<ng-form novalidate name="basicAuthForm" layout="column" layout-padding>
    <md-input-container>
        <label>Username</label>
        <input type="text" ng-model="user.name" name="name" required="">
        <div ng-messages="basicAuthForm.name.$error">
            <div ng-message="required">Field is required</div>
        </div>
    </md-input-container>
    <md-input-container>
        <label>Password</label>
        <input type="password" ng-model="user.password" name="password" required="">
        <div ng-messages="basicAuthForm.password.$error">
            <div ng-message="required">Field is required</div>
        </div>
    </md-input-container>
    <div layout>
        <span flex></span>
        <md-button ng-click="goMental()" ng-disabled="basicAuthForm.$invalid" class="md-button md-raised" aria-label="...">
            Login (Hi, spoofers)
        </md-button>
    </div>
</ng-form>
